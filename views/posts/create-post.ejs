<% layout('posts/layout') %>

<div>
    <h3>Create Post</h3>

    <form class="needs-validation" action="/posts/create" method="POST" enctype="multipart/form-data" novalidate>
        <div class="form-group">
            <input type="text" class="form-control" id="title" name="title" placeholder="Title*" required>
        </div>
        <br>
        <div class="form-group">
            <textarea class="form-control" id="content" name="content" rows="3" placeholder="Body text (optional)"></textarea>
        </div>
        <br>

        <div class="mb-3">
            <label for="formFileMultiple" class="form-label custom-file-label">Add more images:</label>
            <input class="form-control custom-file-input" type="file" name="image" id="formFileMultiple" multiple>
        </div>

        <br>
        <button type="submit">Create</button>
        <button><a href="/posts">Cancel</a></button>
    </form>
</div>