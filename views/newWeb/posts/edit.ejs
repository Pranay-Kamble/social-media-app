<% layout('/newWeb/posts/layout.ejs') %>

<section>
    <h3>Edit Post</h3>

    <%- include('../partials/success-flash.ejs', { success }) %>
    <%- include('../partials/error-flash.ejs', { error }) %>

    <form class="mb-4 needs-validation" action="<%=`/posts/${post._id}/edit?_method=PUT`%>" method="POST" novalidate>
        <div class="form-group mb-2 col-sm-4">
            <input type="text" class="form-control" id="title" name="title" value="<%=post.title%>" required>
        </div>

        <div class="form-group mb-2 col-sm-4">
            <textarea class="form-control"
                      id="content"
                      name="content"
                      rows="3"
                      placeholder="Body (Optional)"><%= post.content%></textarea>
        </div>

        <div>Future Update Add Files also</div>
    <!--    <div class="form-group">-->
    <!--        <input type="file" class="form-control-file" id="exampleFormControlFile1" name="file">-->
    <!--    </div>-->

        <br>
        <button type="submit">Edit</button>
    </form>
    <button><a href="<%=`/posts/${post._id}`%>">Cancel</a></button>

</section>